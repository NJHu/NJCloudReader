<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ee77ee"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark">

        <FrameLayout
            android:id="@+id/nav_menu_button"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical">
            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/titlebar_menu"
                android:layout_gravity="center"
                />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <FrameLayout
                    android:id="@+id/nav_music_button"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical">
                    <ImageView
                        android:id="@+id/nav_music_button_img"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/titlebar_music_selected"
                        android:layout_gravity="center"
                        />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/nav_music_icon_button"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical">
                    <ImageView
                        android:id="@+id/nav_music_icon_button_img"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/titlebar_discover_normal"
                        android:layout_gravity="center"
                        />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/nav_people_button"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical">
                    <ImageView
                        android:id="@+id/nav_people_button_img"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/titlebar_friends_normal"
                        android:layout_gravity="center"
                        />
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/nav_search_button"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical">
            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/actionbar_search"
                android:layout_gravity="center"
                />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
